<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="LeekScript">

    <template name="do" value="do {$END$} while ($CONDITION$);" description="do/while loop" toReformat="true" toShortenFQNames="true">
        <variable name="CONDITION" expression="" defaultValue="" alwaysStopAt="true"/>

        <context>
            <option name="LEEK_SCRIPT" value="true"/>
        </context>
    </template>

    <template name="fu" value="function $NAME$($PARAMS$) {$END$}" description="New function" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="PARAMS" expression="" defaultValue="" alwaysStopAt="true"/>

        <context>
            <option name="LEEK_SCRIPT" value="true"/>
        </context>
    </template>
</templateSet>